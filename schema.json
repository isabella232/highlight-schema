{
  "scope": {
    "type": "string",
    "enum": [
      {"comment": "names of constant values (e.g. `MAX_LENGTH`)"},
      "constant",

      {"comment": "names of built-in constant values (e.g. `NULL`, `true`)"},
      "constant.builtin",

      {"comment": "names of data constructors"},
      "constructor",

      {"comment": "names of built-in data constructors"},
      "constructor.builtin",

      {"comment": "code embedded within another literal (should reset to the default color)"},
      "embedded",

      {"comment": "names of functions"},
      "function",

      {"comment": "names of built-in functions"},
      "function.builtin",

      {"comment": "numbers"},
      "number",

      {"comment": "names of properties (e.g. `age` in `person.age`)"},
      "property",

      {"comment": "names of built-in properties"},
      "property.builtin",

      {"comment": "punctuation characters"},
      "punctuation",

      {"comment": "punctuation characters with extra emphasis"},
      "punctuation.special",

      {"comment": "string literals"},
      "string",

      {"comment": "string-like literals (e.g. regexes, symbols)"},
      "string.special",

      {"comment": "names of types"},
      "type",

      {"comment": "names of built-in types (e.g. `int`, `void`)"},
      "type.builtin",

      {"comment": "names of variables"},
      "variable",

      {"comment": "names of built-in variables (e.g. `this`, `self`, `__dirname`)"},
      "variable.builtin",
    ]
  }
}
